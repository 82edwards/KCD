
@{
    ViewBag.Title = "Create An Account";
}

<h2>Register</h2>

<div>
    <table>
        <tr>
            <td>
                <label>First Name:</label>
            </td>
            <td>
                @Html.TextBox("FirstName")
            </td>
        </tr>
        <tr>
            <td>
                <label>Last Name:</label>
            </td>
            <td>
                @Html.TextBox("LastName")
            </td>
        </tr>
        <tr>
            <td>
                <label>Email Address:</label>
            </td>
            <td>
                @Html.TextBox("EmailAddress")
            </td>
        </tr>
        <tr>
            <td>
                <label>Company:</label>
            </td>
            <td>
                @Html.TextBox("Company")
            </td>
        </tr>
        <tr>
            <td>
                <label>Recieve Emails:</label>
            </td>
            <td>
                @Html.CheckBox("CanSendEmails")
            </td>
        </tr>
        <tr>
            <td>
                <label>Contacted by Sponsers:</label>
            </td>
            <td>
                @Html.CheckBox("CanBeContactedBySponsers")
            </td>
        </tr>
        <tr>
            <td>
                <label>Password:</label>
            </td>
            <td>
                @Html.TextBox("Password")
            </td>
        </tr>
        <tr>
            <td>
                <label>Re-Enter:</label>
            </td>
            <td>
                @Html.TextBox("PasswordConfirmation")
            </td>
        </tr>
    </table>
</div>
