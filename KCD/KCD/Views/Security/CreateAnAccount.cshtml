@using System.Web.UI.WebControls
@model KCD.ViewModel.CreateAccount
@{
    ViewBag.Title = "Create An Account";
}
<h2>Register</h2>

@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <td>
                    <label>Name</label>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(model => model.Account.FirstName, new { placeholder = "First name" })
                    @Html.ValidationMessageFor(model => model.Account.FirstName)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Account.LastName, new { placeholder = "Last name" })
                    @Html.ValidationMessageFor(model => model.Account.LastName)
                </td>
            </tr>
            <tr>
                <td>
                    <label>User name</label>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(model => model.Account.UserName, new { placeholder = "Username" })
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Account.UserName)
                </td>
            </tr>
            <tr>
                <td>
                    <label>Password</label>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.PasswordFor(model => model.Account.Password)
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Account.Password)
                </td>
            </tr>
            <tr>
                <td>
                    <label>8-character minimum</label>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Reenter password</label>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Password("PasswordConfirmation")
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Account.ConfirmPassword)
                </td>
            </tr>
            <tr>
                <td>
                    <label>Email address</label>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(model => model.Account.EmailAddress, new { placeholder = "someone@example.com" })
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Account.EmailAddress)
                </td>
            </tr>
            <tr>
                <td>
                    <label>Email address for sponsors</label>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(model => model.Account.EmailAddressForSponsors, new { placeholder = "someone@example.com" })
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Account.EmailAddressForSponsors)
                </td>
            </tr>
            <tr>
                <td>
                    <label>Company</label>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(model => model.Account.Company, new { placeholder = "ABC Co." })
                </td>
            </tr>
            <tr>
                <td>
                    <label>Recieve Emails</label>
                </td>
                <td>
                    @Html.CheckBoxFor(model => model.Account.CanSendEmails, new { @checked = true })
                </td>
            </tr>
            <tr>
                <td>
                    <label>Contacted by Sponsors</label>
                </td>
                <td>
                    @Html.CheckBoxFor(model => model.Account.CanBeContactedBySponsors, new { @checked = true })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" id="btnSave" value="Submit" />
                </td>
            </tr>
        </table>
    </div>
}