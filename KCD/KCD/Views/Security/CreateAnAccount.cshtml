@model KCD.ViewModel.CreateAccount
@{
    ViewBag.Title = "Create An Account";
}
<h2>Register</h2>

<div>
    <table>
        <tr>
            <td>
                <label>Name</label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBox("FirstName", "", new { placeholder = "First" })
            </td>
            <td>
                @Html.TextBox("LastName", "", new { placeholder = "Last" })
            </td>
        </tr>
        <tr>
            <td>
                <label>User name</label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBox("CreateUserName", "", new { placeholder = "Username" })
            </td>
        </tr>
        <tr>
            <td>
                <label>Password</label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.Password("Password")
            </td>
        </tr>
        <tr>
            <td>
                <label>8-character minimum</label>
            </td>
        </tr>
        <tr>
            <td>
                <label>Reenter password</label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.Password("PasswordConfirmation")
            </td>
        </tr>
        <tr>
            <td>
                <label>Email address</label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBox("EmailAddress", "", new { placeholder = "someone@example.com" })
            </td>
        </tr>
        <tr>
            <td>
                <label>Email address for sponsors</label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBox("EmailAddressForSponsors", "", new { placeholder = "someone@example.com" })
            </td>
        </tr>
        <tr>
            <td>
                <label>Company</label>
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBox("Company")
            </td>
        </tr>
        <tr>
            <td>
                <label>Recieve Emails</label>
            </td>
            <td>
                @Html.CheckBox("CanSendEmails", true)
            </td>
        </tr>
        <tr>
            <td>
                <label>Contacted by Sponsors</label>
            </td>
            <td>
                @Html.CheckBox("CanBeContactedBySponsors", true)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" id="btnSave" value="Submit" />
            </td>
        </tr>
    </table>
</div>

@Scripts.Render("~/Scripts/Custom/CreateAnAccount.js")