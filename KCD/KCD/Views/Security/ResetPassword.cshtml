@{
    ViewBag.Title = "Reset Password";
}

@using (Html.BeginForm())
{
    <h2>@ViewBag.Title</h2>

    <table>
        <tr>
            <td>
                @Html.TextBox("UserName")
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBox("CurrentPassword")
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBox("NewPassword")
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBox("ConfirmPassword")
            </td>
        </tr>
        <tr>
            <td>
                <input type="button" id="ResetPassword" value="Reset" />
            </td>
        </tr>
    </table>
    
    @Scripts.Render("~/Scripts/Custom/ResetPassword.js")
}